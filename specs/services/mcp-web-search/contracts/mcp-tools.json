{
  "name": "mcp-web-search",
  "version": "1.0.0",
  "description": "Web search, news, and social media search tools",
  "tools": [
    {
      "name": "search_web",
      "description": "Search the web for information on any topic",
      "inputSchema": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "Search query"
          },
          "max_results": {
            "type": "integer",
            "default": 10,
            "description": "Maximum number of results"
          },
          "region": {
            "type": "string",
            "description": "Region/country filter (e.g., 'AT' for Austria)"
          }
        },
        "required": ["query"]
      }
    },
    {
      "name": "search_news",
      "description": "Search recent news articles",
      "inputSchema": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "Search query"
          },
          "days_back": {
            "type": "integer",
            "default": 30,
            "description": "How many days back to search"
          },
          "category": {
            "type": "string",
            "enum": ["business", "technology", "lifestyle", "all"],
            "default": "all"
          }
        },
        "required": ["query"]
      }
    },
    {
      "name": "search_images",
      "description": "Search for images related to a topic",
      "inputSchema": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "Search query"
          },
          "image_type": {
            "type": "string",
            "enum": ["photo", "logo", "storefront", "any"],
            "default": "any"
          }
        },
        "required": ["query"]
      }
    },
    {
      "name": "get_webpage_content",
      "description": "Extract and summarize content from a URL",
      "inputSchema": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "description": "URL to extract content from"
          }
        },
        "required": ["url"]
      }
    },
    {
      "name": "search_social_media",
      "description": "Search social media for mentions and sentiment",
      "inputSchema": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "description": "Search query (brand, topic, etc.)"
          },
          "platforms": {
            "type": "array",
            "items": { "type": "string" },
            "default": ["twitter", "instagram", "facebook"],
            "description": "Platforms to search"
          }
        },
        "required": ["query"]
      }
    }
  ]
}
