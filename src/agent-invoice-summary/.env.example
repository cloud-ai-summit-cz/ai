# ============================================================================
# Azure AI Foundry Configuration
# ============================================================================
# Default project endpoint for invoice processing workflow
AZURE_AI_FOUNDRY_ENDPOINT=https://<foudry-project>.services.ai.azure.com/api/projects/proj-default

# Model deployment name
MODEL_DEPLOYMENT_NAME=gpt-4o-mini

# ============================================================================
# MCP Invoice Data Server
# ============================================================================
# MCP server providing PO validation, vendor lookup, and duplicate checks
MCP_INVOICE_DATA_URL=https://mcp-invoice-data.bluetree-fdff5920.eastus2.azurecontainerapps.io/mcp

# ============================================================================
# Observability - Application Insights
# ============================================================================
# Get connection string from Terraform:
#   terraform output -raw application_insights_connection_string

# REQUIRED for tracing - enables OpenTelemetry export to Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=<key>;IngestionEndpoint=https://northcentralus-0.in.applicationinsights.azure.com/
