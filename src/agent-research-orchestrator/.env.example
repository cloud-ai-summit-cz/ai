# Azure AI Foundry endpoint (from portal Overview page)
AZURE_AI_FOUNDRY_ENDPOINT=https://<your-resource>.services.ai.azure.com/api/projects/<project-name>

# Model deployment name (must be set)
MODEL_DEPLOYMENT_NAME=gpt-5

# MCP Scratchpad configuration (optional - enables inter-agent collaboration)
# MCP_SCRATCHPAD_URL=https://ca-mcp-scratchpad.yellowground-xxx.northcentralus.azurecontainerapps.io/mcp
# MCP_SCRATCHPAD_API_KEY=your-api-key-here

# API Configuration (optional)
# API_HOST=0.0.0.0
# API_PORT=8000

# Timeouts (optional)
# AGENT_TIMEOUT_SECONDS=60
# WORKFLOW_TIMEOUT_SECONDS=300
