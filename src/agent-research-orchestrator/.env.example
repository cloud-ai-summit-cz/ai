# ============================================================================
# Azure AI Foundry Configuration
# ============================================================================
# Get these values from Terraform outputs:
#   terraform output -raw ai_foundry_project_endpoint

AZURE_AI_FOUNDRY_ENDPOINT=https://ai-summit-ai-<suffix>.services.ai.azure.com/api/projects/summit-ai-project

# Model deployment name (gpt-5 or gpt-5-mini)
MODEL_DEPLOYMENT_NAME=gpt-5

# ============================================================================
# MCP Scratchpad Configuration
# ============================================================================
# Get URL from Terraform: terraform output -raw container_app_url

MCP_SCRATCHPAD_URL=https://ca-mcp-scratchpad-<suffix>.northcentralus.azurecontainerapps.io/mcp
MCP_SCRATCHPAD_API_KEY=your-api-key-here

# ============================================================================
# MCP Demographics Configuration (ADR-006: orchestrator-managed)
# ============================================================================
# Used by market-analyst agent for demographic data queries

MCP_DEMOGRAPHICS_URL=https://ca-mcp-demographics-<suffix>.northcentralus.azurecontainerapps.io/mcp
MCP_DEMOGRAPHICS_API_KEY=your-api-key-here

# ============================================================================
# MCP Business Registry Configuration (ADR-006: orchestrator-managed)
# ============================================================================
# Used by competitor-analyst agent for business/competitor lookups

MCP_BUSINESS_REGISTRY_URL=https://ca-mcp-business-registry-<suffix>.northcentralus.azurecontainerapps.io/mcp
MCP_BUSINESS_REGISTRY_API_KEY=your-api-key-here

# ============================================================================
# MCP Government Data Configuration (ADR-006: orchestrator-managed)
# ============================================================================
# Used by location-scout and finance-analyst agents for permits, zoning, regulations

MCP_GOVERNMENT_DATA_URL=https://ca-mcp-government-data-<suffix>.northcentralus.azurecontainerapps.io/mcp
MCP_GOVERNMENT_DATA_API_KEY=your-api-key-here

# ============================================================================
# MCP Real Estate Configuration (ADR-006: orchestrator-managed)
# ============================================================================
# Used by location-scout and finance-analyst agents for property listings, rental rates

MCP_REAL_ESTATE_URL=https://ca-mcp-real-estate-<suffix>.northcentralus.azurecontainerapps.io/mcp
MCP_REAL_ESTATE_API_KEY=your-api-key-here

# ============================================================================
# MCP Calculator Configuration (ADR-006: orchestrator-managed)
# ============================================================================
# Used by finance-analyst agent for financial projections, ROI, NPV, break-even

MCP_CALCULATOR_URL=https://ca-mcp-calculator-<suffix>.northcentralus.azurecontainerapps.io/mcp
MCP_CALCULATOR_API_KEY=your-api-key-here

# ============================================================================
# API Configuration
# ============================================================================

API_HOST=0.0.0.0
API_PORT=8000

# Timeouts
AGENT_TIMEOUT_SECONDS=60
WORKFLOW_TIMEOUT_SECONDS=300

# ============================================================================
# Observability - Application Insights
# ============================================================================
# Get connection string from Terraform:
#   terraform output -raw application_insights_connection_string

# REQUIRED for tracing - enables OpenTelemetry export to Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=<key>;IngestionEndpoint=https://northcentralus-0.in.applicationinsights.azure.com/

# Enable sensitive data logging (prompts, responses, function call args)
# WARNING: Be careful with this setting - may expose sensitive data in traces
ENABLE_SENSITIVE_DATA=true

# ============================================================================
# Trace Polling (ADR-005) - Real-time Agent Observability
# ============================================================================
# Get workspace GUID from Terraform:
#   terraform output log_analytics_workspace_guid
#
# This enables polling Application Insights for subagent tool calls that
# can't be captured via MAF stream_callback. See ADR-005 for details.

# Log Analytics Workspace ID (GUID) - REQUIRED for trace polling
LOG_ANALYTICS_WORKSPACE_ID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx

# Enable/disable trace polling (default: true)
TRACE_POLLING_ENABLED=true

# Polling interval in seconds (default: 2.0)
TRACE_POLLING_INTERVAL_SECONDS=2.0
