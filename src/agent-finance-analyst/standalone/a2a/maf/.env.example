# ============================================================================
# Azure OpenAI Configuration
# ============================================================================
# Get these values from your Azure OpenAI deployment

AZURE_OPENAI_ENDPOINT=https://<your-resource>.cognitiveservices.azure.com/

# Model deployment name (gpt-5)
MODEL_DEPLOYMENT_NAME=gpt-5

# API version (use "preview" for Responses API)
AZURE_OPENAI_API_VERSION=preview

# ============================================================================
# MCP Calculator Configuration (Primary tool)
# ============================================================================

# URL of the MCP Calculator server (MCP endpoint, typically /mcp path)
# For local development, use the direct Container App URL
# For cloud deployment, use the APIM gateway URL (recommended)
MCP_CALCULATOR_URL=https://your-apim-gateway.azure-api.net/calculator/mcp

# API key for MCP Calculator authentication (Bearer token)
MCP_CALCULATOR_API_KEY=your-mcp-api-key

# ============================================================================
# MCP Real Estate Configuration
# ============================================================================

MCP_REAL_ESTATE_URL=https://your-apim-gateway.azure-api.net/real-estate/mcp
MCP_REAL_ESTATE_API_KEY=your-mcp-api-key

# ============================================================================
# MCP Government Data Configuration
# ============================================================================

MCP_GOVERNMENT_DATA_URL=https://your-apim-gateway.azure-api.net/government-data/mcp
MCP_GOVERNMENT_DATA_API_KEY=your-mcp-api-key

# ============================================================================
# MCP Business Registry Configuration
# ============================================================================

MCP_BUSINESS_REGISTRY_URL=https://your-apim-gateway.azure-api.net/business-registry/mcp
MCP_BUSINESS_REGISTRY_API_KEY=your-mcp-api-key

# ============================================================================
# MCP Scratchpad Configuration (for inter-agent collaboration)
# ============================================================================

MCP_SCRATCHPAD_URL=https://your-apim-gateway.azure-api.net/scratchpad/mcp
MCP_SCRATCHPAD_API_KEY=your-mcp-api-key

# ============================================================================
# A2A Server Configuration
# ============================================================================

# Host to bind the server to (0.0.0.0 for all interfaces)
A2A_SERVER_HOST=0.0.0.0

# Port to bind the server to
A2A_SERVER_PORT=8022

# Public host/URL that clients will use to reach this agent
# For local: localhost (will auto-add port and http://)
# For cloud: full FQDN without port (will auto-add https://)
A2A_PUBLIC_HOST=localhost

# API key for authentication (leave empty to disable authentication)
# When set, clients must provide: Authorization: Bearer <key> OR X-API-Key: <key>
A2A_API_KEY=

# Agent metadata (optional, has sensible defaults)
# A2A_AGENT_NAME=Finance Analyst Agent
# A2A_AGENT_DESCRIPTION=Financial analysis specialist for Cofilot...
# A2A_AGENT_VERSION=1.0.0
