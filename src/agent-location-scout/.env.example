# ============================================================================
# Azure AI Foundry Configuration
# ============================================================================
# Get these values from Terraform outputs:
#   terraform output -raw ai_foundry_project_endpoint
#   terraform output -raw azure_openai_endpoint

# AI Foundry project endpoint (for hosted agents)
AZURE_AI_FOUNDRY_ENDPOINT=https://ai-summit-ai-<suffix>.services.ai.azure.com/api/projects/summit-ai-project

# Azure OpenAI endpoint (for direct model calls)
AZURE_OPENAI_ENDPOINT=https://ai-summit-ai-<suffix>.openai.azure.com/

# Model deployment name (gpt-5 or gpt-5-mini)
AZURE_AI_MODEL_DEPLOYMENT_NAME=gpt-5

# ============================================================================
# Container Configuration
# ============================================================================

# Container image (use ACR from Terraform output: acr_login_server)
CONTAINER_IMAGE=<acr-name>.azurecr.io/agent-location-scout:latest

# Agent resource allocation
AGENT_CPU=1
AGENT_MEMORY=2Gi

# ============================================================================
# Observability - Application Insights
# ============================================================================
# Get connection string from Terraform:
#   terraform output -raw application_insights_connection_string

# REQUIRED for tracing - enables OpenTelemetry export to Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=<key>;IngestionEndpoint=https://northcentralus-0.in.applicationinsights.azure.com/
